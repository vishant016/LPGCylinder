@model List<LPGCylinderSystem.Models.Complaint>

@{
    ViewData["Title"] = "Details";
}



@if (ViewBag.Error == "Error")
{
    <h1>No Complaints yet!!!!</h1>
}
else
{

    <h1>Details</h1>

    @foreach (var item in Model)
    {
        <div>
            <h4>Complaint</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    item.Complaint_Id

                </dt>
                <dd class="col-sm-10">
                    @item.Complaint_Id
                </dd>
                <dt class="col-sm-2">
                    item.Category
                </dt>
                <dd class="col-sm-10">
                    @item.Category
                </dd>
                <dt class="col-sm-2">
                    item.Description
                </dt>
                <dd class="col-sm-10">
                    @item.Description
                </dd>
                <dt class="col-sm-2">
                    item.Status
                </dt>
                <dd class="col-sm-10">
                    @item.Status
                </dd>
                <dt class="col-sm-2">
                    item.Remark
                </dt>
                <dd class="col-sm-10">
                    @item.Remark
                </dd>
            </dl>
        </div>
        <div>
            <a asp-action="Index" asp-controller="Home">Go To Home</a>
        </div>

        }
    }