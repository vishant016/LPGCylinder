@{
    <link href="~/assets/css/style.css" rel="stylesheet" />
    <form method="post" enctype="multipart/form-data" asp-controller="Booking" asp-action="Dopayment">
        <div class="centerrrr">
            <h1>Select Payment Method</h1>
            <br />
            <div class="form-check">
                <input class="form-check-input" type="radio" name="payments" id="cod" value="cod">
                <label class="form-check-label" for="flexRadioDefault1">
                    Cash On Delivery
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="payments" id="card" value="card" checked>
                <label class="form-check-label" for="flexRadioDefault2">
                    Debit/Credit Card
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="radio" name="payments" id="netbanking" value="netbanking">
                <label class="form-check-label" for="flexRadioDefault2">
                    NetBanking
                </label>
            </div>
            <br />
            <br />

            <button class="btn btn-primary" value="submit" type="submit">Checkout</button>
        </div>
    </form>
}