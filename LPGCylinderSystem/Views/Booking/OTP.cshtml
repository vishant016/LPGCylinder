@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-alpha1/dist/css/bootstrap.min.css" />
    <link href="~/css/otp.css" rel="stylesheet" />

}
<form method="post" enctype="multipart/form-data" asp-controller="Booking" asp-action="OTPPayment">
    <div class="d-flex justify-content-center align-items-center container">
        <div class="card py-5 px-3">
            <h5 class="m-0">Payment verification</h5><span class="mobile-text">Enter the code we just send on your registered Mail:  <b class="text-danger">@ViewBag.mail</b></span>
            <div class="d-flex flex-row mt-5">
                <input type="text" name="otp1" id="otp1" class="form-control" placeholder="Enter OTP here" />
            </div>
            <br />
            <button class="button button2" type="submit" name="submit" style="margin-right: 20px">Submit</button>
            <br />
            <a class="button button2" asp-action="Index" asp-controller="Booking" style="margin-right: 20px">Abort</a>
        </div>
    </div>
</form>@*
