@{
    ViewData["Title"] = "Subsidy Details";

}

<h1 text-align="center">Subsidy Details</h1>
<br />
<form runat="server">
    @if (ViewBag.opted == true)
    {
        <h3>Congratulations!! Currently you are opted in for Subsidy</h3>
        <br />
        <h4>Opt out for subsidy and make one family Happy:)</h4>
        <div style="margin-top:25px;margin-left:100px">

            <button class="btn btn-dark" asp-controller="Home" asp-action="SubsidyVerify">Opt Out</button>
            @*<input type="hidden" name="uid" asp-for="@user.Id.ToString()" />*@
        </div>
    }
    else
    {
        <h3>You are not opted for Subsidy</h3>
        <br />
        <h4>Please fill beolw details to opt in for subsidy!!</h4>
        <br />
        <div class="col-md-4">
            <div class="form-group">
                <label class="control-label">Yearly Income</label>
                <input type="text" name="income" id="income" class="form-control" pattern="[0-9]+" required />
            </div>

            <div class="form-group">
                <label class="control-label">Income Ceritificate Number</label>
                <input type="text" name="certno" id="certno" class="form-control" pattern="[0-9]+" required />
            </div>


            <div class="form-group" style="margin-left:125px;margin-top:25px">

                <button class="btn btn-dark" asp-controller="Home" asp-action="SubsidyVerify">Submit </button>
                @*<input type="hidden" name="uid" asp-for="@user.Id.ToString()" />*@
            </div>
        </div>
    }
</form>

