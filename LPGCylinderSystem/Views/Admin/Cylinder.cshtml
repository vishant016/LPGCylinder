@model LPGCylinderSystem.Models.Cylinder

@{
    ViewData["Title"] = "Cylinder";
    
}

<head runat="server">
    <title></title>
    <script src="jquery-3.1.0.js"></script>
    <script>
        $(document).ready(function () {
            $('#selectnumber').change(function () {
                var id = $('#selectnumber option:selected').text();
                ViewBag.type = id;     
            })
        });
    </script>
</head>
<h1>Cylinder</h1>

<h4>Cylinder</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Cylinder">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="CylinderType" class="control-label"></label>
                <select name="cylindertype" class="form-control form-control-lg" id="selectnumber">
                    <option value="14.2 Kg">14.2 Kg</option>
                    <option value="2.5 Kg">2.5 Kg</option>
                    <option value="20 Kg">20 Kg</option>
                </select>
                <span asp-validation-for="CylinderType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SubsidyAmount" class="control-label"></label>
                <input asp-for="SubsidyAmount" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
